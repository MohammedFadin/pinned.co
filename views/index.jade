doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
    meta(name="description", content="")
    meta(name="author", content="")
    title=appTitle
    link(href="css/bootstrap.css", rel="stylesheet")
    link(href="css/pinned.co.css", rel="stylesheet")
  body(style="font-family:Verdana")
    .container
      .row(style="padding-top:-50px;")
        h3.text-center Pinned.co Chat App
        .col-md-12
          .panel.panel-warning
            .panel-heading
              |  Channels List
            .panel-body
              ul.media-list.list-inline
                li.media
                    .btn.btn-default.btn-xs.channels.card(data-channel="general")
                        span.label.label-info.onlineCounter 2
                        span  General
                li.media
                    .btn.btn-default.btn-xs.channels.card(data-channel="dev")
                        span.label.label-info.onlineCounter 2
                        span  Dev
        .col-md-9
          .panel.panel-info
            .panel-heading
              | Chat Window
            ul.nav.nav-tabs.channels.tabs
              li#general-tab.active
                a(href='#general', data-toggle='tab', aria-expanded='true') General
            #channelsTabsContent.tab-content
              #general.tab-pane.fade.active.in
                .panel-body.scrollable-div
                  ul.media-list#messagesList-general
              p#typing(style="background-color:#f6fbfc; padding: 10px;" hidden) Typing .....
            .panel-footer
            form#chatForm(role="form", style="margin-top:-15px;")
                .input-group
                    input#messageValue.form-control(type="text", placeholder="Enter Message")
                    span.input-group-btn
                        button.btn.btn-info#chatSendBtn Send
        .col-md-3
          .panel.panel-primary
            .panel-heading
              | Chat Statistics
            .panel-body
              ul.media-list
                li.media
                  .media-body
                    .media
                      a.pull-left(href="#")
                        img.media-object.img-circle(style="max-height:40px;", src="/img/Icon-user.png")
                      .media-body
                        h5 Users Online: &nbsp;
                          span#totalOnline
                li.media
                  .media-body
                    .media
                      a.pull-left(href="#")
                        img.media-object.img-circle(style="max-height:40px;", src="/img/Icon-user.png")
                      .media-body
                        h5 Total Joined: &nbsp;
                          span#totalJoined
        .col-md-3
          .panel.panel-primary
            .panel-heading
              |  General Channel
            .panel-body
              ul.media-list
                li.media
                  .media-body
                    .media
                      a.pull-left(href="#")
                        img.media-object.img-circle(style="max-height:40px;", src="/img/Icon-user.png")
                      .media-body
                        h5 Fadin | User
                        small.text-muted Active From 3 hours
    .panel-footer
        p.text-center Pinned.co
        #chooseNicknameModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="chooseNicknameLabel", aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-header
                h4#chooseNicknameLabel.modal-title Create A Nickname
              .modal-body
                form#nicknameForm(role="form")
                  .form-group
                    input#nickname.form-control(type="text", autofocus,required)
                    button.btn.btn-primary(type="submit") Create
        button#sendPrivate submit

    script(src="js/jquery-1.11.1.js")
    script(src="js/bootstrap.min.js")
    script(src="/socket.io/socket.io.js")
    script(src="js/pinned.co.js")
